<h1>New Game</h1>
<% start_time = Time.now %>
<% @letters.each do |letter| %>
<%= letter %>
<% end %>

<form action="/score" method="post">
  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
  <%= hidden_field_tag :letters, @letters %>
  <%= hidden_field_tag :start_time, start_time %>
  <%= hidden_field_tag :end_time, Time.now %>
  <label for="">What is the longest word you can find?</label>
  <input type="text" name="try" placeholder="Try">
  <input type="submit">
</form>
